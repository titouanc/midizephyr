// MIDI DIN connector
// Tx on PD5 / Rx on PD6
midi_din_uart: &usart2 {
    status = "okay";
    pinctrl-0 = <&usart2_tx_pd5 &usart2_rx_pd6>;
    pinctrl-names = "default";
    current-speed = <31250>;
};

